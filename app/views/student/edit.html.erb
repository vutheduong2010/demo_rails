<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<h1> Chỉnh sửa thông tin sinh viên </h1>
<h2>Thông tin sinh viên </h2>

<p class="form-label"><strong>Mã Sinh viên:</strong> <%= @student.student_code %></p>
<p class="form-label"><strong>Tên Sinh Viên:</strong> <%= @student.student_name %></p>
<p class="form-label"><strong>Ngày Sinh:</strong> <%= @student.date_of_birth %></p>
<p class="form-label"><strong>Địa chỉ:</strong> <%= @student.address %></p>
<p class="form-label"><strong>Gmail:</strong> <%= @student.gmail %></p>
<p class="form-label"><strong>Số Điện Thoại:</strong> <%= @student.phone %></p>

<%= form_with(model: @student, local: true) do |form| %>

  <div class="mb-3">
    <label for="exampleFormControlInput1" class="form-label"><%= form.label :student_code %></label>
    <%= form.text_field :student_code,  class:'form-control'%>
  </div>

  <div class="mb-3">
    <label for="exampleFormControlInput1" class="form-label"><%= form.label :student_name %></label>
    <%= form.text_field :student_name,  class:'form-control'%>
  </div>

  <div class="mb-3">
    <label for="exampleFormControlInput1" class="form-label"><%= form.label :date_of_birth %></label>
    <%= form.text_field :date_of_birth,  class:'form-control'%>
  </div>

  <div class="mb-3">
    <label for="exampleFormControlInput1" class="form-label"><%= form.label :address %></label>
    <%= form.text_field :address,  class:'form-control'%>
  </div>

  <div class="mb-3">
    <label for="exampleFormControlInput1" class="form-label"><%= form.label :gmail %></label>
    <%= form.text_field :gmail,  class:'form-control'%>
  </div>

  <div class="mb-3">
    <label for="exampleFormControlInput1" class="form-label"><%= form.label :phone %></label>
    <%= form.text_field :phone,  class:'form-control'%>
  </div>

  <%= form.submit 'Lưu Chỉnh Sửa' %>

  <%= link_to 'Quay Lại', back_to_show_student_path(@student) %>
<% end %>




