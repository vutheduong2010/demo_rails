<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<div class="centered-content">
<h1>Thông tin sinh viên</h1>

<!-- tim kiem sinh vien -->
<h4>Tìm kiếm sinh viên</h4>
<%= form_tag(student_index_path, method: :get) do %>
  <%= text_field_tag :query, params[:query], placeholder: 'Nhập mã sinh viên' %>
  <%= submit_tag 'Tìm Kiếm' %>
<% end %>

<table class="student-table">
  <tr>
    <th>Student Code</th>
    <th>Student Name</th>
    <th>Date of birth</th>
    <th>Address</th>
    <th>Gmail</th>
    <th>Phone</th>
    <th>Action</th>
  </tr>

  <% @student.each do |student| %>

    <tr <%= @ids&.include?(student.id) ? 'active' : '' %>">
      <td class="center-text"><%=  student.student_code  %></td>
      <td class="center-text"><%=  student.student_name %></td>
      <td class="center-text"><%=  student.date_of_birth  %></td>
      <td class="center-text"><%=  student.address  %></td>
      <td class="center-text"><%=  student.gmail  %></td>
      <td class="center-text"><%=  student.phone  %></td>
      <td class="center-text"><%= link_to 'Edit', "/student/#{student.id}" %></td>
      <td class="center-text"><%= button_to 'Xóa', student_path(student.id), method: :delete %></td>
    </tr>
  <% end %>
</table>


<!-- tao bang sinh vien -->
<%= link_to 'Thêm Sinh Viên', new_student_path %>
<%= paginate @student_page %>
</div>
<style>
    table{
        background-color: aliceblue;
    }
    table,tr,th,td{
        padding: 16px;
        border: 1px solid black;
        border-collapse: collapse;
    }
    .centered-content {
        text-align: center;
    }
    .student-table {
        margin: 0 auto;
    }

</style>
